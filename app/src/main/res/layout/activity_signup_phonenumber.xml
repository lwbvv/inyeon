<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradation"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            >

        <TextView
                android:id="@+id/signUpPhoneNumber_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="가입취소"
                android:textColor="#FF9AC5"
                />

        <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                ></View>

        <TextView
                android:id="@+id/signUpPhoneNumber_nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="다음"
                android:textColor="#FF9AC5"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            >

        <EditText
                android:id="@+id/signUpPhoneNumber_phoneNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:hint="핸드폰 번호"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@android:color/white"
                />

        <TextView
                android:id="@+id/signUpPhoneNumber_transmissionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전송"
                android:textSize="16dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        <EditText
                android:id="@+id/signUpPhoneNumber_confirmNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:hint="인증번호"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:backgroundTint="@android:color/white"
                />

        <TextView
                android:id="@+id/signUpPhoneNumber_confirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증"
                android:textSize="16dp"
                />
    </LinearLayout>

</LinearLayout>