<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradation"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            >

        <TextView
                android:id="@+id/signUpMain_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="이전"
                android:textColor="#FF9AC5"
                />

        <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></View>

        <TextView
                android:id="@+id/signUpMain_nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="완료"
                android:textColor="#FF9AC5"
                />

    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="48dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/RegisterContainer">

        <EditText
                android:id="@+id/signUpMain_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:hint="이메일"
                android:backgroundTint="@android:color/white"
                android:paddingLeft="16dp"/>


        <EditText
                android:id="@+id/signUpMain_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:hint="패스워드"
                android:backgroundTint="@android:color/white"
                android:paddingLeft="15dp"/>

        <EditText
                android:id="@+id/signUpMain_passwordCheck"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:hint="패스워드 확인"
                android:backgroundTint="@android:color/white"
                android:paddingLeft="15dp"/>

        <EditText
                android:id="@+id/signUpMain_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:hint="핸드폰 번호"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="36dp"
                android:paddingLeft="15dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp"
                />


        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                >

            <RadioButton
                    android:id="@+id/signUpMain_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:theme="@style/CustomRadioButton"
                    android:layout_weight="1"
                    />

            <RadioButton
                    android:id="@+id/signUpMain_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:theme="@style/CustomRadioButton"
                    android:layout_weight="1"
                    />
        </RadioGroup>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="36dp"
                ></View>


        <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="거주지"-->
                <!--android:layout_marginHorizontal="16dp"-->
                <!--/>-->


        <!--<Spinner-->
                <!--android:id="@+id/signUpMain_do"-->
                <!--android:layout_marginHorizontal="16dp"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:spinnerMode="dropdown"-->
                <!--&gt;</Spinner>-->


    </LinearLayout>


</LinearLayout>